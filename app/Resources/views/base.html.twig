<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}ci-report.io{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header>
        {% block header %}
        <nav class="navbar navbar-toggleable-md navbar-inverse bg-faded">
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">ci-report.io</a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="#"><i class="fa fa-cog"></i> Admin</a>
            </div>
            </div>
        </nav>
        {% endblock %}
        </header>
        <section>
            <div class="container">
                <div class="div-margin-top">
                    {% block breadcrumb %}{% endblock %}
                </div>
                {% block container %}{% endblock %}
            </div>
        </section>
        {% block footer %}
        <footer>
            <div class="container">
                <div class="d-flex justify-content-center">
                    <p>
                        <a href="https://ci-report.io">
                            ci-report.io vx.x.x - bbb - ENV - &copy; {{ 'now'|date('Y') }}
                        </a>
                    </p>
                </div>
            </div>
        </footer>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
