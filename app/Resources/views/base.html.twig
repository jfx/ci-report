<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}ci-report{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/global.css') }}">
        {% endblock %}
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('manifest.json') }}">
        <link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}" color="#5bbad5">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
        <header>
        {% block header %}
        <nav class="navbar navbar-expand-md navbar-dark">
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="{{ path('homepage') }}"><i class="fa fa-pie-chart"></i> ci-report</a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a id="a-dropdown" class="nav-item dropdown-toggle text-white" href="#" ref="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-cog"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a id="a-dropdown-home" class="dropdown-item" href="{{ path('homepage') }}"><i class="fa fa-home"></i>&nbsp;&nbsp;Home</a>
                    <div class="dropdown-divider"></div>
                    <a id="a-dropdown-project" class="dropdown-item" href="#"><i class="fa fa-plus-circle"></i>&nbsp;&nbsp;Add a project</a>
                    <div class="dropdown-divider"></div>
                    <a id="a-dropdown-doc" class="dropdown-item" href="#" target="_blank"><i class="fa fa-book"></i>&nbsp;&nbsp;Documentation</a>
                    <a id="a-dropdown-api" class="dropdown-item" href="{{ path('nelmio_api_doc_index') }}" target="_blank"><i class="fa fa-file-code-o"></i>&nbsp;&nbsp;API Documentation</a>
                </div>
            </div>
            </div>
        </nav>
        {% endblock %}
        </header>
        <section>
            <div class="container">
                <div class="div-margin-top">
                    {% block breadcrumb %}{% endblock %}
                </div>
                {% block container %}{% endblock %}
            </div>
        </section>
        {% block footer %}
        <footer>
            <div class="container">
                <div class="d-flex justify-content-center">
                    <p>
                        <a href="https://www.ci-report.io">
                            ci-report v{{ version }} - {{ build }} - {{ cir_env }} - &copy; {{ 'now'|date('Y') }}
                        </a>
                    </p>
                </div>
            </div>
        </footer>
        {% endblock %}
        {% block javascripts %}
        <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
